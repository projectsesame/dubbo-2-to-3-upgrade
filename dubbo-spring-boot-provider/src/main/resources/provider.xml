<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://dubbo.apache.org/schema/dubbo
    http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="dubbo-springboot-demo-provider"  />
<!--    <dubbo:registry address="127.0.0.1" port="2181" protocol="zookeeper"/>-->
    <!-- 多协议配置 -->
<!--    <dubbo:protocol name="dubbo" port="20880" />-->
    <dubbo:protocol name="tri" port="20880" />
    <!--配置生产者引用的接口 -->
    <dubbo:service interface="io.daocloud.DemoService" ref="demoService"/>
</beans>
